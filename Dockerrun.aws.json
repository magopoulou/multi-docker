{
    "AWSEBDockerrunVersion":3,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "magopoulou/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "magopoulou/multi-server",
            "hostname": "api",
            "essential": false            
        },
        {
            "name": "worker",
            "image": "magopoulou/multi-worker",
            "hostname": "worker",
            "essential": false            
        },
        {
            "name": "nginx",
            "image": "magopoulou/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]            
        }                 
    ]
}